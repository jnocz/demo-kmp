<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="android:windowSplashScreenBehavior" tools:targetApi="tiramisu">icon_preferred</item>
        <item name="postSplashScreenTheme">@style/App.Main</item>
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo</item>
        <!-- Required for animated icons. -->
        <item name="windowSplashScreenAnimationDuration">20</item>
    </style>

    <style name="App.Main" parent="Theme.AppCompat.DayNight.NoActionBar" />
</resources>
